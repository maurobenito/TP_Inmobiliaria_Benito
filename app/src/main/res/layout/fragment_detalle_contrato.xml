<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".ui.contrato.DetalleContratoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Contrato"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de inicio:"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tvFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de finalizaciÃ³n:"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto mensual:"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="8dp" />

        <TextView
            android:id="@+id/tvInquilino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inquilino:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvInmueble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inmueble asociado:"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorPrimary" />

        <Button
            android:id="@+id/btnVerInquilino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Inquilino"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
